<!-- web 관련 설정 파일 -->

<!-- --------------------------------------------------------------------------------------------------------------------------------------------------- -->

<!-- view-controller : GET 요청만 허용, POST 요청은 허용 안함 -->

<!-- --------------------------------------------------------------------------------------------------------------------------------------------------- -->
	
	<!-- 예외 종류별 error 페이지 지정 예시, 코드별로 계속 페이지를 추가할 수 있음. -->
	<beans:bean class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
		<beans:property name="defaultErrorView" value="error"/>
    		<beans:property name="exceptionMappings">
      			<beans:props>
        			<beans:prop key="com.fastcampus.ch2.MyException1">error400</beans:prop>	<!-- key : 예외 종류 / error400 : 에러 view 파일명 -->
				<beans:prop key="com.fastcampus.ch2.MyException2">error500</beans:prop>
      			</beans:props>
    		</beans:property>
		<beans:property name="statusCodes">
			<beans:props>
        			<beans:prop key="error400">400</beans:prop>
			</beans:props>
		</beans:property>
  	</beans:bean>

<!-- --------------------------------------------------------------------------------------------------------------------------------------------------- -->
